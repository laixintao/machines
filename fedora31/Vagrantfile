Vagrant.configure("2") do |config|
  config.vm.box = "bento/fedora-31"
  config.vm.provider "virtualbox" do |v|
    v.name = "fedora31_box"
    v.memory = 1024
    v.cpus = 1
  end
  config.vm.hostname = "lailab"

  config.vm.provision "file", source: Dir.getwd + "/provision-files", destination: "~/provision-files"

  config.vm.provision "shell" do |s|
    s.inline = "cp /home/vagrant/provision-files/dnf.conf /etc/dnf/dnf.conf"
    s.privileged = true
  end
end
